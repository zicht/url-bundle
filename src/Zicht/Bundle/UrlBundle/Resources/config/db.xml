<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zicht_url.db_static_refs.class">Zicht\Bundle\UrlBundle\Url\DbStaticProvider</parameter>
        <parameter key="zicht_url.db_static_refs.request_listener.class">Zicht\Bundle\UrlBundle\Url\DbStaticProvider\RequestListener</parameter>
    </parameters>

    <services>
        <service id="zicht_url.db_static_refs.request_listener" class="%zicht_url.db_static_refs.request_listener.class%">
            <argument type="service" id="zicht_url.db_static_refs" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="100"/>
        </service>
        <service id="zicht_url.db_static_refs" class="%zicht_url.db_static_refs.class%">
            <argument type="service" id="router" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="zicht_url.url_provider" priority="10" />
        </service>
    </services>
</container>
