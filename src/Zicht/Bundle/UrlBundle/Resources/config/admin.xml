<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="zicht_url.admin.url_alias" class="Zicht\Bundle\UrlBundle\Admin\UrlAliasAdmin">
            <tag name="sonata.admin" manager_type="orm" group="URL's" label="Aliases"/>
            <argument/>
            <argument>Zicht\Bundle\UrlBundle\Entity\UrlAlias</argument>
            <argument>ZichtFrameworkExtraBundle:CRUD</argument>
        </service> 
        
        <service id="zicht_url.admin.static_reference" class="Zicht\Bundle\UrlBundle\Admin\StaticReferenceAdmin">
            <tag name="sonata.admin" manager_type="orm" group="URL's" label="Static References"/>
            <argument/>
            <argument>Zicht\Bundle\UrlBundle\Entity\StaticReference</argument>
            <argument>ZichtFrameworkExtraBundle:CRUD</argument>
        </service>
        
        <service id="zicht_url.admin.error_log" class="Zicht\Bundle\UrlBundle\Admin\ErrorLogAdmin">
            <tag name="sonata.admin" manager_type="orm" group="URL's" label="Logs"/>
            <argument/>
            <argument>Zicht\Bundle\UrlBundle\Entity\ErrorLog</argument>
            <argument>ZichtFrameworkExtraBundle:CRUD</argument>
        </service>
    </services>
</container>
