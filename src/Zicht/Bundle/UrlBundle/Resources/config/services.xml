<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zicht_url.url_provider.class">Zicht\Bundle\UrlBundle\Url\DelegatingProvider</parameter>
        <parameter key="zicht_url.request_aware_provider.class">Zicht\Bundle\UrlBundle\Url\RequestAwareProvider</parameter>
        <parameter key="zicht_url.static_refs.class">Zicht\Bundle\UrlBundle\Url\StaticProvider</parameter>
        <parameter key="zicht_url.twig_extension.class">Zicht\Bundle\UrlBundle\Twig\UrlExtension</parameter>
        <parameter key="zicht_url.type.class">Zicht\Bundle\UrlBundle\Type\UrlType</parameter>
    </parameters>

    <services>
        <service id="zicht_url.provider.delegator" class="%zicht_url.url_provider.class%" />
        <service id="zicht_url.request_aware_provider" class="%zicht_url.request_aware_provider.class%" scope="request">
            <argument type="service" id="request" />
            <call method="addProvider">
                <argument type="service" id="zicht_url.provider.delegator"/>
            </call>
        </service>
        <service id="zicht_url.twig_extension" class="%zicht_url.twig_extension.class%">
            <tag name="twig.extension"/>
            <argument type="service" id="zicht_url.provider" />
        </service>
        <service id="zicht_url.static_refs" class="%zicht_url.static_refs.class%">
            <argument type="service" id="router" />
            <tag name="zicht_url.url_provider" priority="-10" />
        </service>
        <service id="zicht_url.type" class="%zicht_url.type.class%">
            <argument type="service" id="zicht_url.aliasing" />
            <tag name="form.type" alias="zicht_url" />
        </service>

        <service id="zicht_url.mapper.xml" class="Zicht\Bundle\UrlBundle\Aliasing\Mapper\XmlMapper">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="zicht_url.url_mapper" />
        </service>

        <service id="zicht_url.mapper.html" class="Zicht\Bundle\UrlBundle\Aliasing\Mapper\HtmlMapper">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="zicht_url.url_mapper" />
        </service>

        <service id="zicht_url.mapper.rss" class="Zicht\Bundle\UrlBundle\Aliasing\Mapper\RssMapper">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="zicht_url.url_mapper" />
        </service>

        <service id="zicht_url.mapper.json" class="Zicht\Bundle\UrlBundle\Aliasing\Mapper\JsonMapper">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <tag name="zicht_url.url_mapper" />
        </service>

        <service id="zicht_url.service.url_validator" class="Zicht\Bundle\UrlBundle\Service\UrlValidator">
            <factory class="Zicht\Bundle\UrlBundle\Service\UrlValidatorFactory"
                     method="createUrlValidator" />
            <tag name="zicht_url.url_validator" />
        </service>

        <service id="zicht_url.validator.contains_valid_urls"
                 class="Zicht\Bundle\UrlBundle\Validator\Constraints\ContainsValidUrlsValidator">
            <argument type="service" id="zicht_url.service.url_validator" />
            <tag name="validator.constraint_validator" />
        </service>
        
        <service id="zicht_url.tinymce_type_extension"
                    class="Zicht\Bundle\UrlBundle\Form\Extension\TinymceTypeExtension">
            <argument type="service" id="zicht_url.aliasing" />
            <tag name="form.type_extension"
                 extended-type="Zicht\Bundle\AdminBundle\Form\TinymceType"
                 alias="tinymce" />
        </service>
    </services>
</container>
