{% block zicht_url_widget %}
    <span id="{{ id }}_current" class="current">{{ current_url_title }}</span>
    <a id="{{ id }}_search_btn" class="btn" href="#"><i class="icon-edit"></i></a>
    <div id="{{ id }}_search_control" style="display: none; padding-top: 1em">
        {{ block('form_widget_simple') }}
    </div>
    <script type="text/javascript">
        (function($) {
            var text_id = '{{ id }}';
            var btn_id = '{{ id }}_search_btn';
            var control_id = '{{ id }}_search_control';
            var id_current = '{{ id }}_current';
            $(function() {
                $('#' + btn_id).click(function(e) {
                    e.preventDefault();
                    $('#' + control_id).slideToggle();
                });
                $('#' + text_id).focus(function() {
                    $(this).select();
                });
                $('#' + text_id).autocomplete({
                    minLength: 2,
                    source: function(req, response) {
                        $.get(
                            "{{ url_suggest }}",
                            {
                                "pattern": req.term
                            },
                            function(data) {
                                response(data.suggestions);
                            }
                        )
                    },
                    select: function(event, ui) {
                        $('#' + id_current).text(ui.item.label);
                    }
                });
            });
        })(jQuery);
    </script>
{% endblock %}